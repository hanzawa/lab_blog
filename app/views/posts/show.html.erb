<p>
  <b>Title:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Body:</b>
  <%=h @post.body %>
</p>

<p>
  <b>Author:</b>
  <%=h @post.author.try(:name) %>
</p>

<% @post.comments.each do |comment| -%>
  <p><%=h comment.body %></p>
<% end -%>

<%= render :partial => 'comments/form' %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
